<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:clickable="true"
    android:focusable="true"
    android:background="?actionBarItemBackground"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="2dp"
    android:id="@+id/home_cardView"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/layout_allTutor"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/tutor_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/profile" />


        <RelativeLayout
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/tutor_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tutor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingTop="5dp"
                android:text="Name Here "
                android:textColor="@color/backgroundColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gym_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tutor_name"
                android:fontFamily="monospace"
                android:text="Rajajipuram"
                android:textSize="12sp" />


            <RatingBar
                android:layout_centerVertical="true"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_below="@+id/gym_location"
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:id="@+id/rating_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gym_location"
                android:layout_toRightOf="@+id/ratingBar"
                android:text="1,936"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gym_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingBar"
                android:fontFamily="monospace"
                android:paddingTop="5dp"
                android:text="â‚¹100"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingBar"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/gym_price"
                android:fontFamily="monospace"
                android:padding="5dp"
                android:text="|visit"
                android:textSize="12sp" />


        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>