<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TutorEnquiry"
    tools:showIn="@layout/activity_tutor_enquiry">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="@dimen/_10sdp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@+id/app_other_function_rec"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"

            />

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_layoyt"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="20dp"
            android:fontFamily="monospace"
            android:padding="10dp"
            android:text="@string/tutor_heading"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/edit_layoyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView7"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_border_edittext"
                android:fontFamily="@font/antic"
                android:hint="Name(Required)"
                android:paddingLeft="@dimen/_10sdp">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_border_edittext"
                android:fontFamily="@font/antic"
                android:hint="Email"
                android:paddingLeft="@dimen/_10sdp" />

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_border_edittext"
                android:fontFamily="@font/antic"
                android:hint="Phone Number"
                android:paddingLeft="@dimen/_10sdp" />

            <EditText
                android:id="@+id/editTextStudentName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_border_edittext"
                android:fontFamily="@font/antic"
                android:hint="Student Name"
                android:paddingLeft="@dimen/_10sdp" />

            <EditText
                android:id="@+id/editTextClass"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_border_edittext"
                android:drawableRight="@drawable/ic_expand_more_black_24dp"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/antic"
                android:hint="Class"
                android:onClick="selectClassDialog"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp" />

            <EditText
                android:id="@+id/editTextSubject"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_border_edittext"
                android:drawableRight="@drawable/ic_expand_more_black_24dp"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/antic"
                android:hint="Subject"
                android:onClick="selectSubject"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp" />

            <EditText
                android:id="@+id/editTextGender"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_border_edittext"
                android:drawableRight="@drawable/ic_expand_more_black_24dp"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/antic"
                android:hint="Gender"
                android:onClick="selectGender"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp" />

            <EditText
                android:id="@+id/editTextFee"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_border_edittext"
                android:drawableRight="@drawable/ic_expand_more_black_24dp"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/antic"
                android:hint="Monthly Fee"
                android:onClick="selectMonthlyFee"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp" />

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/rounded_border_edittext"
                android:drawableRight="@drawable/ic_my_location_black_24dp"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/antic"
                android:hint="Address"
                android:onClick="selectGender"
                android:padding="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp" />

            <Button

                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/next_btn"
                android:fontFamily="@font/antic"
                android:onClick="submitEnquiry"
                android:text="SUBMIT ENQUIRY"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>


</ScrollView>