<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:clickable="true"
    android:focusable="true"
    android:background="?actionBarItemBackground"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="2dp"
    android:id="@+id/home_cardView"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

            <ImageView
                android:id="@+id/tutor_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/profile" />


        <RelativeLayout
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/tutor_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tutor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingTop="5dp"
                android:text="GYM Name Here "
                android:textColor="@color/backgroundColor"
                android:textSize="18sp" />

            <TextView
                android:paddingLeft="@dimen/_2sdp"
                android:id="@+id/gym_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tutor_name"
                android:fontFamily="monospace"
                android:text="Rajajipuram"
                android:textSize="12sp" />


            <RatingBar
                android:layout_centerVertical="true"
                android:paddingTop="5dp"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_below="@+id/gym_location"
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:id="@+id/rating_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gym_location"
                android:layout_toRightOf="@+id/ratingBar"
                android:text="1,936"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gym_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingBar"
                android:fontFamily="@font/antic"
                android:text="â‚¹100"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingBar"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/gym_price"
                android:fontFamily="monospace"
                android:text=" |visit"
                android:textSize="12sp" />

            <TextView
                android:layout_below="@+id/tutor_name"
                android:fontFamily="monospace"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_near_me_black_24dp"
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:text="2.0 Km"
                android:textSize="12sp"
                android:textColor="@color/colorButton" />

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>